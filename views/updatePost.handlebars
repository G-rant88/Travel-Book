<div class="container">
  {{!-- page title --}}
  <div class="row">
    <h3 >Edit Post!</h3>
    <form id="form" dataValue="{{data.id}}" class="col s12" method="post" enctype="multipart/form-data">
      <div class="input-field col s12" >
        <label for="place"></label>
        <input name='place' id="place" placeholder="Place" type="text" data-error=".errorTxt1" value="{{data.name}}">

        <div class="errorTxt1" id="errormsg"></div>
      </div>
      <div class="input-field col s12" >
        <label for="cityC"></label>
        <input name='cityC' id="cityC" placeholder="City" type="text" data-error=".errorTxt2" value="{{data.city}}" >

        <div class="errorTxt2" id="errormsg"></div>
      </div>
      <div class="input-field col s12" >
        <label for="countryC"></label>
        <input name='countryC' id="countryC" placeholder="Place" type="text" data-error=".errorTxt3" value="{{data.country}}">
        <div class="errorTxt3" id="errormsg"></div>
      </div>
      <div class="input-field col s12">
        <label for="category"></label>
        <select value="{{data.categories}}" name='category' id="category" data-error=".errorTxt4">
          <option value="" disabled>Choose the category</option>
          <option id="category0" name='category' value="food">Food</option>
          <option id="category1" name='category' value="attractions">Attractions</option>
          <option id="category2" name='category' value="accommodations">Accomodation</option>
        </select>
        <div class="errorTxt4" id="errormsg"></div>
      </div>
      <div class="input-field col s12">
        <label for="rating"></label>
        <select value="{{data.categories}}" name='rating' id="rating" data-error=".errorTxt5">
          <option value="" disabled>Choose your rating</option>
          <option id="rating0" value="1">1</option>
          <option id="rating1" value="2">2</option>
          <option id="rating2" value="3">3</option>
          <option id="rating3" value="4">4</option>
          <option id="rating4" value="5">5</option>
        </select>
        <div class="errorTxt5" id="errormsg"></div>
      </div>
      <div class="input-field col s12">
        <label for="pricepoint"></label>
        <select value="{{data.price}}" name='pricepoint' id="pricepoint" data-error=".errorTxt6">
          <option value="" disabled>Price Point</option>
          <option id="price0" value="1">>$10 per person</option>
          <option id="price1" value="2">$10-20 per person</option>
          <option id="price2" value="3">$20 per person</option>
        </select>
        <div class="errorTxt6" id="errormsg"></div>
      </div>
      <div class="input-field col s12">
        <label for="textarea1">Enter your review</label>
        <textarea name='review' id="review" class="materialize-textarea" type="text" data-error=".errorTxt7"></textarea>
        <div class="errorTxt7" id="errormsg"></div>
      </div>
      </div>
      <div class="input-field col s12">
        <button class="waves-effect waves-light btn"id="updatePost">Update</button>
      </div>
    </form>
  </div>
</div>


