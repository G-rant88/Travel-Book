<div class="container">
    {{!-- page title --}}
    <div class="col s12 center-align">
        <h3>We found these results for your future trip to {{data.city}}, {{data.country}}!</h3>
    </div>
    {{!-- results data --}}
    <div class="row">
    	{{#each data.daty}}
    	 <div class="col s12 m4 center-align">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title">Place: {{name}}</span>
              <img src=https://s3-us-west-2.amazonaws.com/travelbookpictures/{{image}} width="100%">
              <p>Review: {{review}}</p>
              <p><span class="rating">Rating: {{rating}}</span></p>
              <p>Price: {{price}}</p>
              <p>Written By: {{user.username}}</p>
            </div>
            <div class="card-action">
              {{!-- change icon based on category; icons: local_dining, local_taxi, local_hotel--}}
              <a href="#" class="category-icon" value=""><i class="material-icons">local_dining</i></a>
              <a href="#" class="like-btn" data-status="unliked" data-post-id="{{id}}" data-name="{{name}}" data-price="{{price}}" data-rating="{{rating}}" data-categories="{{categories}}"><i class="material-icons heart">favorite_border</i></a>
            </div>
          </div>
      </div>
      {{/each}}
    </div>
    {{!-- liked list as sidenav --}}
    <ul id="slide-out" class="side-nav">
        <li>
          <div class="user-view">
            <div class="background">
            <img src="https://www.brainscape.com/blog/wp-content/uploads/2014/12/sunset-plane.png">
            </div>
            <a href="#" class="waves-effect waves-light btn"><span>Save new trip</span></a>
          </div>
        </li>
        {{!-- selected items go here as li tags --}}
    </ul>
    {{!-- button to see sidenav --}}
    <div class="fixed-action-btn" id="list-btn">
      <a id="user-list" data-activates="slide-out" class="waves-effect waves-light btn btn-floating button-collapse" ><i class="material-icons">menu</i></a>
    </div>
           

</div>

{{>login}}